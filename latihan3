print("------------------------------------------------------")
print("\t\t Menghitung Luas Ruangan")
print("------------------------------------------------------")
p=float(input("\t Masukkan Panjang   ="))
l=float(input("\t Masukkan Lebar    ="))

def luasRuangan(p,l):
    luas = (p*l)
    return luas
luas=luasRuangan (p, l)
print("\t Luas Ruangan      =", luas, "m2")
print("------------------------------------------------------")
